<div class="grid-x">
  <div class="cell small-1 medium-1 large-2"></div>
  <div class="cell small-10 medium-10 large-8 ">
    <form class="create-form" id="create-event">
      <div class="form-group">
        <label for="event-name" class="form-stuff">Name your event: </label>
        <input type="text" id="event-name" name="event-name" required>
      </div>
      <div class="form-group">
        <label for="event-desc" class="form-stuff">Event Description: </label>
        <textarea id="event-desc" name="event-desc" rows="5" columns="40"></textarea>
      </div>
      <div class="form-group">
        <label for="event-location" class="form-stuff">Event Location: </label>
        <input type="text" id="event-location" name="event-location" required>
      </div>
      <div class="form-group" style="display: flex; justify-content: start;">
        <div style="width: 40%; margin-right: 5%;">
          <label for="event-date" class="form-stuff">Event Date: </label>
          <input type="date" id="event-date" name="event-date" required>
        </div>
        <div style="width: 40%;">
          <label for="event-time" class="form-stuff">Event Time: </label>
          <input type="time" id="event-time" name="event-time" required>
        </div>
      </div>
