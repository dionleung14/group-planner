<div class="card" id={{event_id}}>
  <div class="card-divider" class="eventName">
    {{name}}
    <button class="button edit-event-button" id="{{event_id}}">Edit Event</button>
  </div>
  <div class="grid-x">
    <div class="cell small-3 medium-3 large-3">
      <div class="card-section">
        <img src="https://media.pitchfork.com/photos/5929b349b1335d7bf169a583/1:1/w_600/2a09604e.jpg" class="thumbnail"
          alt="bowie">
      </div>
    </div>
    <div class="cell small-9 medium-9 large-9">
      <br>
      <div class="grid-x">
        <div class="cell small-6 medium-6 large-6" class="eventLocation">Location: {{location}}</div>
        <div class="cell small-2 medium-2 large-2"></div>
        <div class="cell small-4 medium-4 large-4" class="eventDate">Date: {{date}}</div>
      </div>
      <br>
      <div class="grid-x">
        <div class="cell small-6 medium-6 large-6" class="eventHost">Host: {{host}}</div>
        <div class="cell small-2 medium-2 large-2"></div>
        <div class="cell small-4 medium-4 large-4" class="eventTime" id="date-time">Time: {{time}}</div>
      </div>
      <br>
      <div class="grid-x">
        <div class="cell auto" class="eventDescription">Description: {{description}}</div>
      </div>
      <br>
      <br>
      <br>
      <br>
      <div class="grid-x">
        <div class="cell auto" class="eventCollabs">Collabs: {{collabs}}</div>
      </div>
    </div>
    <div class="grid-x countdown-timer">
    <h3>Countdown: <span data-countdown="{{date_time}}" class="timerSpan"></span></h3>
    </div>



  </div>
  <br>

</div>
<br>




