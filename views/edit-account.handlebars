      <div class="form-group">
        <label for="update-email">Change your email:
          <input type="email" id="update-email" name="update-account" placeholder="{{email}}">
        </label>
      </div>
      <div class="form-group">
        <label for="update-phone">Change your phone number:
          <input type="tel" placeholder="{{phone}}" id="update-phone" maxlength="12">
        </label>
      </div>
      <button class="button submit" id="editedACC">Submit changes</button>
      <button class="button" type="reset" id="resetBTN">Clear all fields</button>
