<div class="grid-x">
  <div class="cell small-1 medium-3 large-3 text-center"></div>
  <div class="cell small-10 medium-6 large-6 text-center">
    <h3>Edit account</h3>
  </div>
  <div class="cell small-1 medium-3 large-3 text-center"></div>
</div>

<div class="grid-x">
  <div class="cell small-1 medium-3 large-3"></div>
  <div class="cell small-10 medium-6 large-6">
    <form id="editAccount">
      <div class="form-group">
        <label for="current-user">Username:
          <input type="text" id="current-user" name="update-account" placeholder={{username}}>
        </label>
      </div>
      <div class="form-group">
        <label for="update-first">First Name:
          <input type="text" id="update-first" name="update-account" placeholder={{firstname}}>
        </label>
      </div>
      <div class="form-group">
        <label for="update-last">Last Name:
          <input type="text" id="update-last" name="update-account" placeholder={{lastname}}>
        </label>
      </div>
      {{!-- <div class="form-group">
        <label for="invited-pass">Change your password:
          <input type="password" id="invited-pass" name="update-account" placeholder="new password" required>
        </label>
      </div> --}}
      {{!-- <div class="form-group">
        <label for="invited-pass-confirm">Confirm your password:
          <input type="password" id="invited-pass-confirm" name="update-account" placeholder="confirm your password"
            required>
        </label>
      </div> --}}
      <div class="form-group">
        <label for="update-email">Change your email:
          <input type="email" id="update-email" name="update-account" placeholder={{email}}>
        </label>
      </div>
      <div class="form-group">
        <label for="update-phone">Change your phone number xxx-xxx-xxxx (optional)
          <input type="tel" placeholder={{phone}} pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" id="update-phone">
        </label>
      </div>
      <button class="button submit" id="editedACC">Submit changes</button>
      <button class="button" type="reset" id="resetBTN">Clear all fields</button>
    </form>
  </div>
  <div class="cell small-1 medium-3 large-3"></div>
</div>