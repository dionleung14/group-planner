    <form class="editAccountForm" id="{{id}}">
      <div class="form-group">
        <label for="current-user">Username:
          <input type="text" id="current-user" name="update-account" value="{{username}}">
        </label>
      </div>
      <div class="form-group">
        <label for="update-first">First Name:
          <input type="text" id="update-first" name="update-account" value="{{firstname}}">
        </label>
      </div>
      <div class="form-group">
        <label for="update-last">Last Name:
          <input type="text" id="update-last" name="update-account" value="{{lastname}}">
        </label>
      </div>
