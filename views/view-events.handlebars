<div class="grid-x">
  <div class="cell small-1 medium-3 large-3 text-center"></div>
  <div class="cell small-10 medium-6 large-6 text-center">
    <h2>View the events!</h2>
  </div>
  <div class="cell small-1 medium-3 large-3 text-center"></div>
</div>

<br>

<div class="grid-x">
  <div class="cell small-1 medium-1 large-1"></div>
  <div class="cell small-10 medium-10 large-10">
    {{#if events}}
    {{#each events}}
    {{> event-entry}}
    {{/each}}
    {{else}}
    <h3 class="cell small-10 medium-6 large-6 text-center">No events listed. Create one to see the magic!</h3>
    {{/if}}
    <br>

  </div>

  <div class="cell small-1 medium-1 large-1"></div>
</div>