<div class="grid-x">
  <div class="cell small-1 medium-3 large-3"></div>
  <div class="cell small-10 medium-6 large-6">
    <h4 class="text-center">Account set-up</h4>
    <form id="invitedUser">
      <div class="form-group">
        <label for="invited-user">New Username:
          <input type="text" id="invited-user" name="create-account" placeholder="new username" required>
        </label>
      </div>
      <div class="form-group">
        <label for="invited-first">First Name:
          <input type="text" id="invited-first" name="create-account" placeholder="first name" required>
        </label>
      </div>
      <div class="form-group">
        <label for="invited-last">Last Name:
          <input type="text" id="invited-last" name="create-account" placeholder="last name" required>
        </label>
      </div>
      <div class="form-group">
        <label for="invited-pass">Create a password:
          <input type="password" id="invited-pass" name="create-account" placeholder="new password" required>
        </label>
      </div>
      <div class="form-group">
        <label for="invited-pass-confirm">Confirm your password:
          <input type="password" id="invited-pass-confirm" name="create-account" placeholder="confirm your password"
            required>
        </label>
      </div>
      <div class="form-group">
        <label for="new-email">Confirm your email:
          <input type="email" id="new-email" name="create-account" placeholder="something@somewhere.com" value="Display their email here" disabled>
        </label>
        <button class="button error">Is your email incorrect?</button>
      </div>
      <div class="form-group">
        <label for="invited-phone">Enter your phone number xxx-xxx-xxxx (optional)
          <input type="tel" placeholder="555-123-6789" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" id="invited-phone">
        </label>
      </div>
      <button class="button submit" id="invitedACC">Finish account set up</button>
      <button class="button" type="reset" id="resetBTN">Clear all fields</button>

    </form>
  </div>
  <div class="cell small-1 medium-3 large-3"></div>
</div>